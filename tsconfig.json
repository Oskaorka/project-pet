{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        // "strict": true,
        "paths": {
            "*": ["./src/*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
    },
    // "include": ["./config/jest/jest-setup.ts", "./src/**/*"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["./config/jest/setupTests.ts", "./src/**/*"],
    // "include": ["./config/jest/setupTests.ts"],
    "types": ["node", "jest", "@testing-library/jest-dom"],
}
